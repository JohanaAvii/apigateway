        }
      },
      "input_headers": ["*"]
    },
    {
      "endpoint": "/request/listing",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/request/listing",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": ["http://movie-backend:9000"],
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {
        "documentation/openapi": {
          "version": "1.0",
          "summary": "listing",
          "description": "Cartelera de películas en la aplicación"
        }
      },
      "input_query_strings": ["size", "page"],
      "input_headers": ["*"]
    },
    {
      "endpoint": "/request",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/request",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": ["http://movie-backend:9000"],
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {
        "documentation/openapi": {
          "version": "1.0",
          "summary": "create request",
          "description": "Crea una solicitud para una pelicula"
        }
      },
      "input_headers": ["*"]
    },
    {
      "endpoint": "/request/response",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/request/response",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": ["http://movie-backend:9000"],
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {
        "documentation/openapi": {
          "version": "1.0",
          "summary": "request solve",
          "description": "Responder a las solicitudes generadas"
        }
      },
      "input_headers": ["*"]
    }
  ],
  "echo_endpoint": true
}
