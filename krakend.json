{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "Marine - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "extra_config": {
    "security/cors": {
      "allow_origins": ["*"],
      "allow_methods": [
        "GET",
        "POST",
        "DELETE",
        "PUT",
        "PATCH",
        "OPTIONS",
        "HEAD"
      ],
      "expose_headers": ["Content-Length", "Content-Type", "Authorization"],
      "allow_headers": ["Authorization", "Accept-Language", "Content-Type"],
      "debug": false
    },
    "documentation/openapi": {
      "version": "1.0",
      "host": "https://10c8-186-169-58-104.ngrok-free.app",
      "base_path": "/open-api",
      "description": "Rutas o endpoints para el api",
      "contact_name": "Jhonatan",
      "contact_email": "eljhona_@hotmail.com"
    }
  },
  "output_encoding": "no-op",
  "port": 3000,
  "debug_endpoint": true,
  "endpoints": [
    {
      "endpoint": "/auth/login",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/login",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": ["http://auth-backend:9000"],
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {
        "documentation/openapi": {
          "version": "1.0",
          "summary": "login",
          "description": "Endpoint para el login",
          "example": {
            "email": "user@corp.com",
            "password": "somthing"
          }
        }
      },
      "input_headers": ["Content-Length", "Content-Type", "Authorization"]
    },
    {
      "endpoint": "/auth/users",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/users",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": ["http://auth-backend:9000"],
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {
        "documentation/openapi": {
          "version": "1.0",
          "summary": "get all users",
          "description": "Devuelve la lista de usuarios de la aplicacion"
        }
      },
      "input_headers": ["*"],
      "input_query_strings": ["page", "size"]
    },
    {
      "endpoint": "/auth/users",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/users",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": ["http://auth-backend:9000"],
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {
        "documentation/openapi": {
          "version": "1.0",
          "summary": "create user",
          "description": "Registra un usuario en la aplicacion"
        }
      },
      "input_headers": ["*"]
    },
    {
      "endpoint": "/auth/user/token",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/users/token",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": ["http://auth-backend:9000"],
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {
        "documentation/openapi": {
          "version": "1.0",
          "summary": "validate token",
          "description": "Valida el token en la verificación de sesión para react"
        }
      },
      "input_headers": ["*"]
    },
    {
      "endpoint": "/lambda/link-movie",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/lambda/link-movie",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": ["http://movie-backend:9000"],
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {
        "documentation/openapi": {
          "version": "1.0",
          "summary": "link movie with aws",
          "description": "Guarda el enlace aws de la pelicula en la base de datos"
        }
      },
      "input_headers": ["*"]
    },
    {
      "endpoint": "/request/upload",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/request/upload",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": ["http://movie-backend:9000"],
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {
        "documentation/openapi": {
          "version": "1.0",
          "summary": "video upload",
